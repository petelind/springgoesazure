version: '2.4'

services:
  persistence:
    image: mongo:latest
    volumes:
      - type: volume
        source: /data/db
        target: /data/db
    ports:
      - 27017:27017
    Memory: 1024M
    Cpu: 0.5
  

  provider-math:
    image: application/provider-math:naive
    depends_on:
      persistence:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8081/actuator/health"]
      interval: 30s
      timeout: 5s
      retries: 5
    environment:
      SERVER_PORT: 8080
    ports:
      - 8080:8081
    

  provider-history:
    image: application/provider-history:naive
    depends_on:
      persistence:
          condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8082/actuator/health"]
      interval: 30s
      timeout: 5s
      retries: 5
    environment:
      SERVER_PORT: 8080
    ports:
      - 8080:8082

  examinator:
    image: application/examinator:naive
    depends_on:
      service-math:
        condition: service_healthy
      service-history:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/actuator/health"]
      interval: 30s
      timeout: 5s
      retries: 5
    environment:
      SERVER_PORT: 8080
    ports:
      - 8080:8080

 